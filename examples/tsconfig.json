{
    "exclude": [
        "./gen",
        "./lib",
        "./norsk-examples-remote",
        "./data",
        "./todo"
    ],
    "compilerOptions": {
        "lib": [
          "es2020", "DOM"
        ],
        "allowJs": true,
        "composite": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "lib",
        "sourceMap": true,
        "sourceRoot": "./",
        "strict": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "target": "ES2020"
    }
}
